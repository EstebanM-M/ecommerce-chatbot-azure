# =============================================================================
# E-COMMERCE CHATBOT - ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# =============================================================================
# AZURE BOT SERVICE CONFIGURATION
# =============================================================================
# Get these values from Azure Portal > Your Bot Resource > Configuration
MICROSOFT_APP_ID=your-bot-app-id-here
MICROSOFT_APP_PASSWORD=your-bot-app-password-here
MICROSOFT_APP_TYPE=MultiTenant
MICROSOFT_APP_TENANTID=your-tenant-id-here

# =============================================================================
# AZURE SQL DATABASE CONFIGURATION
# =============================================================================
# Format: yourservername.database.windows.net (without tcp: prefix)
SQL_SERVER=your-server-name.database.windows.net
SQL_DATABASE=ecommerce_chatbot
SQL_USERNAME=your-sql-admin-username
SQL_PASSWORD=your-sql-admin-password
SQL_DRIVER={ODBC Driver 18 for SQL Server}

# =============================================================================
# AZURE COGNITIVE SERVICES (Optional - for enhanced NLU)
# =============================================================================
# Get these from Azure Portal > Cognitive Services > Text Analytics
AZURE_TEXT_ANALYTICS_KEY=your-text-analytics-key-here
AZURE_TEXT_ANALYTICS_ENDPOINT=https://your-resource.cognitiveservices.azure.com/

# =============================================================================
# APPLICATION INSIGHTS (Optional - for monitoring)
# =============================================================================
# Get from Azure Portal > Application Insights > Properties
APPINSIGHTS_INSTRUMENTATION_KEY=your-instrumentation-key-here

# =============================================================================
# BOT CONFIGURATION
# =============================================================================
BOT_NAME=E-commerce Support Bot
BOT_VERSION=1.0.0

# =============================================================================
# MACHINE LEARNING MODELS
# =============================================================================
# Paths to your trained models (relative to project root)
SENTIMENT_MODEL_PATH=ml_models/sentiment/model
RECOMMENDATION_MODEL_PATH=ml_models/recommendations/model

# Use pretrained models from Hugging Face (true) or custom trained models (false)
USE_PRETRAINED_MODELS=true

# =============================================================================
# CONVERSATION SETTINGS
# =============================================================================
# Maximum conversation duration in minutes before auto-timeout
MAX_CONVERSATION_DURATION_MINUTES=30

# Enable conversation analytics and logging
ENABLE_ANALYTICS=true

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# =============================================================================
# API SETTINGS
# =============================================================================
# Host and port for the bot API
API_HOST=0.0.0.0
API_PORT=3978

# =============================================================================
# STREAMLIT DASHBOARD (Optional)
# =============================================================================
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0

# =============================================================================
# DEVELOPMENT/PRODUCTION MODE
# =============================================================================
# Set to 'development' or 'production'
ENVIRONMENT=development

# Enable debug mode (verbose logging, detailed error messages)
DEBUG=true

# =============================================================================
# NOTES FOR SETUP
# =============================================================================
# 1. Create an Azure Bot Service resource in Azure Portal
# 2. Create an Azure SQL Database
# 3. (Optional) Create Azure Text Analytics resource for enhanced NLU
# 4. (Optional) Create Application Insights for monitoring
# 5. Copy this file to .env and fill in your values
# 6. Run sql/schema.sql to create database tables
# 7. Run sql/seed_data.sql to insert sample data
# 8. Start the bot: python -m bot.bot
# 9. Start the dashboard: streamlit run dashboard/app.py

# For detailed setup instructions, see docs/DEPLOYMENT.md
